{
	"name": "libsof",
	"version": "0.1.2",
	"externalDependencies": {
		"poco": {
			"repository" : "https://github.com/pocoproject/poco",
			"kind" : "git",
			"tag" : "poco-1.12.4-release"
		}
	},

	"targets" : {
		"poco": {
			"kind": "cmakeProject",
			"location": "${external:poco}",
			"recheck": false,
			"rebuild": false
		}
	}
	,
	"distribution": {
		"mac": {
			"kind": "archive",
			"condition": "[:macos]",
			"format": "zip",
			"include": [
				"${external:poco}/**"
			]
		}
		,
		"linux": {
			"kind": "archive",
			"condition": "[:linux]",
			"format": "zip",
			"include": [
				"${external:poco}/**"
			]
		}
	}
}